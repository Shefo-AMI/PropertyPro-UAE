{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../dist",
    "rootDir": "../",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "vite.config.ts"
  ]
}